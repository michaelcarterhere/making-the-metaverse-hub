---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import EpisodeMedium from "@/components/podcast/EpisodeMedium.astro";
import EpisodeCard from "@/components/podcast/EpisodeCard.astro";
// Content
const allPodcasts = await getCollection("podcast");
import { getCollection } from "astro:content";
// Sections
import AsideEpisode from "@/components/podcast/AsideEpisode.astro";
import AdvertAside from "@/components/advert/AdvertAside.astro";
// Sort posts by date
allPodcasts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime();
  const dateB = new Date(b.data.pubDate).getTime();
  return dateB - dateA; // Compare timestamps
});
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-12">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-2">
        <div class="lg:col-span-3">
          <span class="sr-only"> Podcast series </span>
          <div>
            {
              allPodcasts
                .filter((post) => post.data.isLocked)
                .slice(0, 1)
                .map((post) => <EpisodeCard post={post} />)
            }
          </div>
          <div
            class="mt-2 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-2"
          >
            {
              allPodcasts
                .filter((post) => post.data.isLocked)

                .map((post) => <EpisodeMedium post={post} />)
            }
          </div>
        </div>

        <div class="lg:sticky lg:top-10 lg:z-50">
          <AsideEpisode />
          <AdvertAside />
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
