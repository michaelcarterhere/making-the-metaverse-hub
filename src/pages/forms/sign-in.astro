---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
---
<BaseLayout hideNav={true} hideFooter={true}>
  <section>
    <Wrapper variant="standard" class="py-2">
      <div
        class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:pt-80 lg:px-20 lg:h-[98svh] flex flex-col justify-center"
      >
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-end">
          <div>
            <span class="text-base-400 text-xs font-mono font-light"
              >Sign In</span
            >
            <Text
              tag="h1"
              variant="textXL"
              class="font-light font-mono text-white md:w-1/2 mt-8 text-balance"
            >
              Log In and Prove You're One of the Good Ones
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-200 pl-8 mt-4 font-light text-balance"
            >
              Welcome back. You know the drill—email, password, mild panic when
              you forget your login. Let’s get you back to the good stuff.
            </Text>
            <Link href="/" size="sm" variant="orange" class="mt-8 w-fit">
              Go back gome
            </Link>
          </div>
          <form action="#" method="POST" class="mt-2">
            <div class="flex flex-col gap-y-2">
              <div>
                <label for="email" class="text-sm font-medium text-base-500"
                  >Email</label
                >
                <div class="mt-1">
                  <input
                    type="email"
                    name="email"
                    id="email"
                    autocomplete="email"
                    required
                    aria-required="true"
                    aria-describedby="email-error"
                    class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                  />
                  <span id="email-error" class="hidden text-sm text-red-600">
                    Please enter a valid email address.
                  </span>
                </div>
              </div>
              <div>
                <label for="password" class="text-sm font-medium text-base-500">
                  Password
                  <a href="#" class="text-pink-600 hover:text-pink-700"
                    >Forgot password?</a
                  >
                </label>
                <div class="mt-1">
                  <input
                    type="password"
                    name="password"
                    id="password"
                    autocomplete="current-password"
                    required
                    aria-required="true"
                    aria-describedby="password-error"
                    class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                  />
                  <span id="password-error" class="hidden text-sm text-red-600">
                    Please enter a valid password.
                  </span>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <input
                    id="remember-me"
                    name="remember-me"
                    type="checkbox"
                    class="rounded size-4 bg-base-900 border-base-700 text-pink-600 focus:ring-pink-600"
                  />
                  <label
                    for="remember-me"
                    class="text-sm font-medium text-base-500"
                  >
                    Remember me
                  </label>
                </div>
                <p class="text-xs font-mono text-white font-light">
                  Dont' have an account?
                  <a
                    href="/forms/sign-up"
                    class="font-medium text-pink-500 hover:text-base-500"
                  >
                    Sign up
                  </a>
                </p>
              </div>
            </div>
            <div>
              <Button
                iconOnly
                type="submit"
                size="20"
                variant="pink"
                class="mt-8"
              >
                <ArrowRight slot="icon" size="xl" />
              </Button>
            </div>
          </form>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
