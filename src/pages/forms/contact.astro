---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
// Array
const locations = [
  {
    city: "Stockholm",
    address: "Drottninggatan 88, 111 36 Stockholm, Sweden",
    phone: "+46 (8) 123 456",
    email: "contact@stockholm.se",
  },
  {
    city: "Copenhagen",
    address: "Nørrebrogade 56, 2200 København N, Denmark",
    phone: "+45 12 34 56 78",
    email: "contact@copenhagen.dk",
  },
];

---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-12">
      <div class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:px-20">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
          <div>
            <span class="text-base-400 text-xs font-mono font-light"
              >Contact</span
            >
            <Text
              tag="h1"
              variant="textXL"
              class="font-light font-mono text-white md:w-1/2 mt-8 text-balance"
            >
              Say Hello. Or Complain. We're Listening (Mostly).
            </Text>
            <Text
              tag="p"
              variant="textSM"
              class="text-base-200 pl-8 mt-4 font-light text-balance"
            >
              Questions? Feedback? Hot takes? Drop us a message and we’ll try
              not to ghost you—unless it's the weekend. Or a national nap day.
            </Text>

            <div class="grid grid-cols-2 lg:grid-cols-2 gap-2 gap-y-8 mt-12">
              {
                locations.map((location) => (
                  <div>
                    <Text tag="h3" variant="textBase" class="  text-white ">
                      {location.city}
                    </Text>
                    <address class="mt-2 not-italic text-white font-mono pl-8 lg:w-2/3">
                      <Text tag="p" variant="textXS" class="text-white">
                        {location.address}
                      </Text>
                      <Text tag="p" variant="textXS" class="mt-2">
                        <a
                          href={`tel:${location.phone.replace(/\s/g, "")}`}
                          class="text-base-300 hover:underline"
                        >
                          {location.phone}
                        </a>
                      </Text>
                      <Text tag="p" variant="textXS" class="mt-2">
                        <a
                          href={`mailto:${location.email}`}
                          class="text-base-300 hover:underline"
                        >
                          {location.email}
                        </a>
                      </Text>
                    </address>
                  </div>
                ))
              }
            </div>
          </div>

          <form action="#" method="POST" class="mt-2">
            <div class="flex flex-col gap-y-2">
              <div>
                <label for="email" class="text-sm font-medium text-base-500"
                  >Email</label
                >
                <div class="mt-1">
                  <input
                    type="email"
                    name="email"
                    id="email"
                    autocomplete="email"
                    required
                    aria-required="true"
                    aria-describedby="email-error"
                    class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                  />
                  <span id="email-error" class="hidden text-sm text-red-600">
                    Please enter a valid email address.
                  </span>
                </div>
              </div>
              <div>
                <label for="email" class="text-sm font-medium text-base-500"
                  >Message</label
                >
                <div class="mt-1">
                  <textarea
                    name="message"
                    id="message"
                    required
                    aria-required="true"
                    aria-describedby="message-error"
                    placeholder="Your message"
                    rows="4"
                    class="block w-full px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                  ></textarea>
                  <span id="message-error" class="hidden text-sm text-red-600">
                    Please enter a valid message.
                  </span>
                </div>
              </div>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <input
                    id="remember-me"
                    name="remember-me"
                    type="checkbox"
                    class="rounded size-4 bg-base-900 border-base-700 text-pink-600 focus:ring-pink-600"
                  />
                  <label
                    for="remember-me"
                    class="text-sm font-medium text-base-500"
                  >
                    Remember me
                  </label>
                </div>
                <p class="text-xs font-mono text-white font-light">
                  Dont' have an account?
                  <a
                    href="/forms/sign-up"
                    class="font-medium text-pink-500 hover:text-base-500"
                  >
                    Sign up
                  </a>
                </p>
              </div>
            </div>
            <div>
              <Button
                iconOnly
                type="submit"
                size="20"
                variant="pink"
                class="mt-8"
              >
                <ArrowRight slot="icon" size="xl" />
              </Button>
            </div>
          </form>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
