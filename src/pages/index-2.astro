---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Sections
import BlogHero2 from "@/components/blog/landingPages/index2/BlogHero2.astro";
import Briefs2 from "@/components/blog/landingPages/index2/Briefs2.astro";
import TopStories2 from "@/components/blog/landingPages/index2/TopStories2.astro";
import Aside2 from "@/components/blog/landingPages/index2/Aside2.astro";
import Categories2 from "@/components/blog/landingPages/index2/Category2.astro";
//Adverts
import AdvertInline from "@/components/advert/AdvertInline.astro";
---

<BaseLayout>
  <BlogHero2 />
  <sections>
    <Wrapper variant="standard"> <Briefs2 /></Wrapper>
  </sections>
  <section>
    <Wrapper variant="standard" class="py-2 space-y-2">
      <TopStories2 />
      <AdvertInline />
    </Wrapper>
  </section>
  <section>
    <Wrapper variant="standard">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-2">
        <div class="lg:col-span-2">
          <Categories2 />
        </div>
        <div>
          <div class="lg:sticky lg:top-2 lg:z-20">
            <Aside2 />
          </div>
        </div>
      </div>
    </Wrapper>
  </section>
</BaseLayout>
