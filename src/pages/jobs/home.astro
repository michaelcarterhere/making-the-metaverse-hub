---
// Funadtions
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import JobsEntry from "@/components/jobs/JobsEntry.astro";
// Content
import { getCollection } from "astro:content";
const allJobs = await getCollection("jobs");
---

<BaseLayout>
  <Wrapper variant="standard" class="pt-12">
    <div
      class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:pt-80 lg:px-20"
    >
      <span class="font-mono text-xs font-light text-base-400">Careers</span>
      <Text
        tag="h1"
        variant="textXL"
        class="mt-8 font-mono font-light text-white md:w-1/3 text-balance"
      >
        Jobs That Might Actually Pay You (What a Concept)
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="pl-8 mt-4 font-light text-base-200 md:w-2/4 text-balance"
      >
        Looking for purpose, stability, or just a better desk chair? We've got
        roles that might help with at least one of those.
      </Text>
    </div>
    <div class="mt-2 grid grid-cols-1 lg:grid-cols-4 gap-2">
      {allJobs.map((post) => <JobsEntry post={post} />)}
    </div>
  </Wrapper>
</BaseLayout>
