---
// Fundations
import BaseLayout from "@/layouts/BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Array
const colors = [
  {
    title: "Base",
    items: [
      { name: "Base 50", colorClass: "bg-base-50" },
      { name: "Base 100", colorClass: "bg-base-100" },
      { name: "Base 200", colorClass: "bg-base-200" },
      { name: "Base 300", colorClass: "bg-base-300" },
      { name: "Base 400", colorClass: "bg-base-400" },
      { name: "Base 500", colorClass: "bg-base-500" },
      { name: "Base 600", colorClass: "bg-base-600" },
      { name: "Base 700", colorClass: "bg-base-700" },
      { name: "Base 800", colorClass: "bg-base-800" },
      { name: "Base 900", colorClass: "bg-base-900" },
      { name: "Base 950", colorClass: "bg-base-900" },
    ],
  },
  {
    title: "Accent",
    items: [
      { name: "Accent 50", colorClass: "bg-accent-50" },
      { name: "Accent 100", colorClass: "bg-accent-100" },
      { name: "Accent 200", colorClass: "bg-accent-200" },
      { name: "Accent 300", colorClass: "bg-accent-300" },
      { name: "Accent 400", colorClass: "bg-accent-400" },
      { name: "Accent 500", colorClass: "bg-accent-500" },
      { name: "Accent 600", colorClass: "bg-accent-600" },
      { name: "Accent 700", colorClass: "bg-accent-700" },
      { name: "Accent 800", colorClass: "bg-accent-800" },
      { name: "Accent 900", colorClass: "bg-accent-900" },
      { name: "Accent 950", colorClass: "bg-accent-950" },
    ],
  },
  {
    title: "Pink",
    items: [
      { name: "Pink 50", colorClass: "bg-pink-50" },
      { name: "Pink 100", colorClass: "bg-pink-100" },
      { name: "Pink 200", colorClass: "bg-pink-200" },
      { name: "Pink 300", colorClass: "bg-pink-300" },
      { name: "Pink 400", colorClass: "bg-pink-400" },
      { name: "Pink 500", colorClass: "bg-pink-500" },
      { name: "Pink 600", colorClass: "bg-pink-600" },
      { name: "Pink 700", colorClass: "bg-pink-700" },
      { name: "Pink 800", colorClass: "bg-pink-800" },
      { name: "Pink 900", colorClass: "bg-pink-900" },
      { name: "Pink 950", colorClass: "bg-pink-950" },
    ],
  },
  {
    title: "Orange",
    items: [
      { name: "Orange 50", colorClass: "bg-orange-50" },
      { name: "Orange 100", colorClass: "bg-orange-100" },
      { name: "Orange 200", colorClass: "bg-orange-200" },
      { name: "Orange 300", colorClass: "bg-orange-300" },
      { name: "Orange 400", colorClass: "bg-orange-400" },
      { name: "Orange 500", colorClass: "bg-orange-500" },
      { name: "Orange 600", colorClass: "bg-orange-600" },
      { name: "Orange 700", colorClass: "bg-orange-700" },
      { name: "Orange 800", colorClass: "bg-orange-800" },
      { name: "Orange 900", colorClass: "bg-orange-900" },
      { name: "Orange 950", colorClass: "bg-orange-950" },
    ],
  },
];
---

<BaseLayout>
  <section>
    <Wrapper variant="standard" class="pt-12">
      <Text tag="h1" variant="textLG" class="font-mono text-white">Colors</Text>

      <div class="mt-2 grid grid-cols-4 gap-2 text-base-400">
        {
          colors.map((colorGroup) => (
            <div class="flex flex-col p-8 bg-base-900 gap-2 rounded-4xl">
              <Text tag="h3" variant="textSM" class="font-mono text-white ">
                {colorGroup.title}
              </Text>
              <div class="mt-8 grid grid-cols-3 gap-2 gap-y-8">
                {colorGroup.items.map((item) => (
                  <div class="flex flex-col gap-2">
                    <div
                      class={`p-4 aspect-square rounded-xl ${item.colorClass}`}
                    />
                    <span class="text-xs text-base-600">{item.name}</span>
                  </div>
                ))}
              </div>
            </div>
          ))
        }
      </div>
    </Wrapper>
  </section>
</BaseLayout>
