---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// stats array
const stats = [
  { label: "Creators on the platform", value: "8,000+" },
  { label: "Flat platform fee", value: "3%" },
  { label: "Uptime guarantee", value: "99.9%" },
  { label: "Paid out to creators", value: "$70M" },
  { label: "Total content views", value: "100M+" },
  { label: "Monthly active users", value: "500K+" },
  { label: "Countries served", value: "50+" },
  { label: "Content published per day", value: "1,500+" },
];
// ad options
const adOptions = [
  {
    title: "Display Ads",
    description: "Banner ads on various pages of our website.",
  },
  {
    title: "Sponsored Content",
    description: "Custom articles tailored to your brand.",
  },
  {
    title: "Podcast Sponsorship",
    description: "Ad slots in our popular podcasts.",
  },
  {
    title: "Newsletter Ads",
    description: "Reach our email subscribers with targeted messaging.",
  },
];
const payments = [
  {
    title: "Pricing",
    description:
      "Pricing varies depending on the type of ad and placement. Please get in touch with us to receive a custom quote based on your needs.",
    linkText: "Request a Quote →",
    linkHref: "mailto:advertise@yourwebsite.com",
  },
  {
    title: "Get In Touch",
    description:
      "Have questions? We're happy to help you with any inquiries you have about advertising opportunities.",
    linkText: "Contact Us →",
    linkHref: "mailto:advertise@yourwebsite.com",
  },
];
---

<!-- Advertise with Us Page -->
<section>
  <Wrapper variant="standard" class="pt-12">
    <div
      class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:pt-80 lg:px-20"
    >
      <span class="text-base-400 text-xs font-mono font-light">Advertise</span>
      <Text
        tag="h1"
        variant="textXL"
        class="font-light font-mono text-white md:w-1/3 mt-8 text-balance"
      >
        Get Your Brand in Front of People Who Probably Need It
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="text-base-200 pl-8 mt-4 md:w-2/4 font-light text-balance"
      >
        Want to sponsor smart content and reach an audience that pretends to
        read the fine print? You've come to the right place. Let's make your ad
        actually work.
      </Text>
    </div>
    <dl class="grid grid-cols-1 lg:grid-cols-4 gap-2 mt-2">
      {
        stats.map((stat) => (
          <div class="flex flex-col gap-y-1 p-8 bg-base-100 rounded-4xl">
            <dt class="text-xs mt-4 font-mono font-light text-base-600">
              {stat.label}
            </dt>
            <dd class="order-first text-6xl font-mono   text-base-900">
              {stat.value}
            </dd>
          </div>
        ))
      }
    </dl>
    <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-2">
      <Wrapper
        variant="prose"
        class="flex flex-col gap-8 p-8 lg:px-20 bg-base-100 rounded-4xl"
      >
        <div>
          <h3>Why advertise with us?</h3>
          <p>
            We offer a variety of advertising solutions across multiple
            platforms. Whether it's through sponsored content, display ads, or
            podcast sponsorships, we help you reach your target audience
            effectively.
          </p>
          <ul role="list">
            <li>Targeted audience reach</li>
            <li>High-quality content integration</li>
            <li>Multiple ad formats available</li>
          </ul>
        </div>
        <div>
          <h3>Our audience</h3>
          <p>
            Our audience consists of passionate individuals interested in
            sports, technology, business, health, and more. With thousands of
            daily visitors and loyal followers, we provide brands with an ideal
            platform to engage with their target market.
          </p>

          <ul role="list">
            <li>
              <strong class="font-mono">Age:</strong> 18-45
            </li>
            <li>
              <strong class="font-mono">Gender:</strong> 60% Male, 40% Female
            </li>
            <li>
              <strong class="font-mono">Location:</strong> Global (with a focus on
              North America)
            </li>
          </ul>
        </div>
      </Wrapper>

      <div class="p-8 lg:px-20 bg-base-100 rounded-4xl">
        <Text tag="h3" variant="displaySM" class="font-light"
          >Ad placement options</Text
        >
        <Text
          tag="p"
          variant="textSM"
          class="font-mono font-light text-base-600 pl-8"
          >We offer a variety of advertising formats to suit your needs:</Text
        >
        <div>
          <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="grid grid-cols-1 md:grid-cols-1 gap-2">
              {
                adOptions.map((ad) => (
                  <div>
                    <Text tag="h4" variant="textBase" class="text-base-900">
                      {ad.title}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-mono font-light text-base-600 pl-8"
                    >
                      {ad.description}
                    </Text>
                  </div>
                ))
              }
            </div>

            <div class="flex flex-col gap-8">
              {
                payments.map((section) => (
                  <div>
                    <Text tag="h4" variant="textBase" class="text-base-900">
                      {section.title}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-mono font-light text-base-600 pl-8"
                    >
                      {section.description}
                    </Text>

                    <Link
                      variant="accent"
                      size="sm"
                      class="mt-4 not-prose w-fit"
                      href={section.linkHref}
                    >
                      {section.linkText}
                    </Link>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
