---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";

// stats array
const stats = [
  { label: "Episodes released", value: "87+" },
  { label: "Years of conversations", value: "3+" },
  { label: "Core themes", value: "AI, VR, Web3, Future of Work" },
  { label: "Primary audience", value: "Educators & Tech Pros" },
  { label: "Show format", value: "Interviews & Deep Dives" },
  { label: "Publishing cadence", value: "Weekly / Bi-weekly" },
  { label: "Content focus", value: "Strategy, Tools, Ethics" },
  { label: "Host location", value: "Canada" },
];
// ad options
const adOptions = [
  {
    title: "Podcast Sponsorship",
    description: "Mid-roll or end-roll host-read ads within Making the Metaverse episodes.",
  },
  {
    title: "Branded Segments",
    description: "Short recurring segments that align your brand with a key theme (AI, VR, future of work).",
  },
  {
    title: "Episode Partnerships",
    description: "Co-created episodes that explore topics at the intersection of your work and emerging technologies.",
  },
  {
    title: "Cross-Promotion",
    description: "Inclusion in show notes, social posts, and selected newsletter mentions for featured partners.",
  },
];
const payments = [
  {
    title: "Partnership Options",
    description:
      "Partnerships are tailored based on campaign goals, episode integration, and level of involvement. Share your objectives and we’ll propose a sponsorship package.",
    linkText: "Start a Conversation →",
    linkHref: "mailto:michael.carter8@me.com",
  },
  {
    title: "Questions?",
    description:
      "Not sure what’s possible or where to start? Reach out and we can explore if Making the Metaverse is a good fit for your brand or initiative.",
    linkText: "Email Michael →",
    linkHref: "mailto:michael.carter8@me.com",
  },
];
---

<!-- Advertise with Us Page -->
<section>
  <Wrapper variant="standard" class="pt-12">
    <div
      class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:pt-80 lg:px-20"
    >
      <span class="text-base-400 text-xs font-mono font-light">Partnerships &amp; Sponsorships</span>
      <Text
        tag="h1"
        variant="textXL"
        class="font-light font-mono text-white md:w-1/3 mt-8 text-balance"
      >
        Advertise on <span class="italic">Making the Metaverse</span>
      </Text>
      <Text
        tag="p"
        variant="textSM"
        class="text-base-200 pl-8 mt-4 md:w-2/4 font-light text-balance"
      >
        Partner with a podcast that sits at the intersection of AI, virtual worlds, and the future of work. Making the Metaverse reaches curious professionals, educators, founders, and builders who care about where technology is taking us next.
      </Text>
    </div>
    <dl class="grid grid-cols-1 lg:grid-cols-4 gap-2 mt-2">
      {
        stats.map((stat) => (
          <div class="flex flex-col gap-y-1 p-8 bg-base-100 rounded-4xl">
            <dt class="text-xs mt-4 font-mono font-light text-base-600">
              {stat.label}
            </dt>
            <dd class="order-first text-6xl font-mono   text-base-900">
              {stat.value}
            </dd>
          </div>
        ))
      }
    </dl>
    <div class="mt-2 grid grid-cols-1 md:grid-cols-2 gap-2">
      <Wrapper
        variant="prose"
        class="flex flex-col gap-8 p-8 lg:px-20 bg-base-100 rounded-4xl"
      >
        <div>
          <h3>Why partner with Making the Metaverse?</h3>
          <p>
            Making the Metaverse explores how AI, immersive tech, and emerging tools
            are reshaping work, learning, and culture. Sponsorships are integrated
            thoughtfully into episodes so your brand feels aligned with the ideas,
            not bolted on as an interruption.
          </p>
          <ul role="list">
            <li>Host-read integrations that feel natural and trusted</li>
            <li>Deep-dive conversations rather than surface-level soundbites</li>
            <li>Alignment with themes of innovation, strategy, and ethics</li>
          </ul>
        </div>
        <div>
          <h3>Who listens?</h3>
          <p>
            Listeners include practitioners and decision-makers across AI, software,
            education, and emerging tech. They are curious, forward-looking, and
            engaged with conversations about where technology and society are headed.
          </p>

          <ul role="list">
            <li>
              <strong class="font-mono">Roles:</strong> Developers, founders, educators, analysts, and tech leaders
            </li>
            <li>
              <strong class="font-mono">Interests:</strong> AI, virtual/augmented reality, automation, digital strategy
            </li>
            <li>
              <strong class="font-mono">Mindset:</strong> Curious, critical, and open to new ideas and tools
            </li>
          </ul>
        </div>
      </Wrapper>

      <div class="p-8 lg:px-20 bg-base-100 rounded-4xl">
        <Text tag="h3" variant="displaySM" class="font-light"
          >Ad placement options</Text
        >
        <Text
          tag="p"
          variant="textSM"
          class="font-mono font-light text-base-600 pl-8"
          >We offer a variety of advertising formats to suit your needs:</Text
        >
        <div>
          <div class="mt-8 grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="grid grid-cols-1 md:grid-cols-1 gap-2">
              {
                adOptions.map((ad) => (
                  <div>
                    <Text tag="h4" variant="textBase" class="text-base-900">
                      {ad.title}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-mono font-light text-base-600 pl-8"
                    >
                      {ad.description}
                    </Text>
                  </div>
                ))
              }
            </div>

            <div class="flex flex-col gap-8">
              {
                payments.map((section) => (
                  <div>
                    <Text tag="h4" variant="textBase" class="text-base-900">
                      {section.title}
                    </Text>
                    <Text
                      tag="p"
                      variant="textSM"
                      class="font-mono font-light text-base-600 pl-8"
                    >
                      {section.description}
                    </Text>

                    <Link
                      variant="accent"
                      size="sm"
                      class="mt-4 not-prose w-fit"
                      href={section.linkHref}
                    >
                      {section.linkText}
                    </Link>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </div>
  </Wrapper>
</section>
