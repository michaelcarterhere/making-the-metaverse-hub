---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
// Components
import EntryMedium from "@/components/blog/EntryMedium.astro";
// Get all posts
import { getCollection } from "astro:content";
const allPosts = await getCollection("posts");
allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime(); // Convert to timestamp
  const dateB = new Date(b.data.pubDate).getTime(); // Convert to timestamp
  return dateB - dateA; // Compare timestamps
});
// Define categories dynamically
const categories = [
  { name: "Business", tag: "business" },
  { name: "Projects", tag: "projects" },
  { name: "Tech", tag: "tech" },
  { name: "Smart Cities", tag: "smart cities" },
  { name: "Education", tag: "education" },
  { name: "Future of Work", tag: "futureofwork" }
];
---

<section>
  <Wrapper variant="standard" class="py-2">
    <div class="grid grid-cols-1 md:grid-cols-1 gap-2">
      {
        categories.map((category) => (
          <div>
            <div class="p-8 bg-base-600 rounded-2xl">
              <Text
                href={`/blog/tags/${category.tag}`}
                tag="a"
                variant="textXS"
                class="flex justify-between font-mono font-light text-white uppercase gap-x-2 group"
              >
                {category.name}
                <span class="flex items-center  group-hover:text-yellow-500 gap-2">
                  More stories <ArrowRight slot="icon" size="sm" />
                </span>
              </Text>
            </div>
            <div class="mt-2 grid grid-cols-1 md:grid-cols-2  gap-2">
              {allPosts
                .filter((post) => post.data.tags.includes(category.tag))

                .map((post) => (
                  <EntryMedium post={post} />
                ))}
            </div>
          </div>
        ))
      }
    </div>
  </Wrapper>
</section>
