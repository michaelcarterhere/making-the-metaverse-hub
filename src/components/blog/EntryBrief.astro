---
import Text from "@/components/fundations/elements/Text.astro";
const { url, title, image, pubDate, tags } = {
  url: "/blog/posts/" + Astro.props.post.slug,
  tags: Astro.props.post.data.tags,
  title: Astro.props.post.data.title,
  image: Astro.props.post.data.image.url,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<article class="relative p-8 group bg-base-100 rounded-4xl">
  <a href={url} title={title} class="absolute inset-0 z-10"> </a>
  <div class="flex flex-col justify-between h-full col-span-2">
    <div
      class="flex items-center pl-8 font-mono font-light gap-x-2 text-base-600"
    >
      <span>
        {
          tags.map((tag) => {
            const formattedTag = tag.replace(/-/g, " ");
            return (
              <Text
                tag="p"
                variant="textXS"
                title={tag}
                aria-label={tag}
                class="capitalize "
              >
                {formattedTag}
              </Text>
            );
          })
        }
      </span>
      <span>Â·</span>
      <Text tag="p" variant="textXS">
        <time datetime={pubDate}>{pubDate}</time>
      </Text>
    </div>
    <Text tag="h3" variant="textXL" class="mt-8 font-light text-base-900">
      {title}
    </Text>
  </div>
</article>
