---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
---

<section>
  <Wrapper variant="standard" class="pt-12">
    <div
      class="p-10 rounded-4xl lg:rounded-[4rem] bg-base-900 lg:px-20 lg:h-[98svh] flex flex-col justify-center"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">
        <div>
          <span class="text-base-400 text-xs font-mono font-light">Apply</span>
          <Text
            tag="h1"
            variant="textXL"
            class="font-light font-mono text-white md:w-1/2 mt-8 text-balance"
          >
            Send Us Your Details. Impress Us (Or Try To).
          </Text>
          <Text
            tag="p"
            variant="textSM"
            class="text-base-200 pl-8 mt-4 font-light text-balance lg:w-2/3"
          >
            Applying is easy. No portals from the '90s, no psychometric tests,
            and absolutely no personality quizzes. Just drop your name, email, a
            link to your résumé, and a few convincing sentences about why we
            should fight for you in meetings.
            <br />
            <br />
            We read every application—unless it’s submitted during lunch, in which
            case it might have to wait until we’re done pretending salad is a meal.
          </Text>
        </div>
        <form action="#" method="POST" class="mt-2">
          <div class="flex flex-col gap-y-2">
            <!-- Name -->
            <div>
              <label for="name" class="text-sm font-medium text-base-500"
                >Full Name</label
              >
              <div class="mt-1">
                <input
                  type="text"
                  name="name"
                  id="name"
                  autocomplete="name"
                  required
                  aria-required="true"
                  aria-describedby="name-error"
                  class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                />
                <span id="name-error" class="hidden text-sm text-red-600">
                  Please enter your full name.
                </span>
              </div>
            </div>

            <!-- Email -->
            <div>
              <label for="email" class="text-sm font-medium text-base-500"
                >Email</label
              >
              <div class="mt-1">
                <input
                  type="email"
                  name="email"
                  id="email"
                  autocomplete="email"
                  required
                  aria-required="true"
                  aria-describedby="email-error"
                  class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                />
                <span id="email-error" class="hidden text-sm text-red-600">
                  Please enter a valid email address.
                </span>
              </div>
            </div>

            <!-- Resume URL -->
            <div>
              <label for="resume" class="text-sm font-medium text-base-500"
                >Resume Link</label
              >
              <div class="mt-1">
                <input
                  type="url"
                  name="resume"
                  id="resume"
                  required
                  aria-required="true"
                  aria-describedby="resume-error"
                  class="block w-full h-20 px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                />
                <span id="resume-error" class="hidden text-sm text-red-600">
                  Please provide a valid link to your resume.
                </span>
              </div>
            </div>

            <!-- Message -->
            <div>
              <label for="message" class="text-sm font-medium text-base-500"
                >Cover Letter</label
              >
              <div class="mt-1">
                <textarea
                  name="message"
                  id="message"
                  required
                  aria-required="true"
                  aria-describedby="message-error"
                  rows="5"
                  class="block w-full px-4 py-2 font-mono text-3xl text-white border border-transparent appearance-none bg-base-800 rounded-3xl duration-300 placeholder-base-300 focus:bg-transparent focus:outline-none focus:ring-pink-500 focus:ring-offset-2 focus:ring-2 focus:ring-offset-base-500"
                ></textarea>
                <span id="message-error" class="hidden text-sm text-red-600">
                  Please include a message or short cover letter.
                </span>
              </div>
            </div>
          </div>

          <div>
            <Button
              iconOnly
              type="submit"
              size="20"
              variant="pink"
              class="mt-8"
            >
              <ArrowRight slot="icon" size="xl" />
            </Button>
          </div>
        </form>
      </div>
    </div>
  </Wrapper>
</section>
