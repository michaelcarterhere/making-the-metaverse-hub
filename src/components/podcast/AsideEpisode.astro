---
// Entries
import EntrySimple from "@/components/podcast/PodcastSimple.astro";
// Get all posts
import { getCollection } from "astro:content";
const allPosts = await getCollection("podcast");
allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime(); // Convert to timestamp
  const dateB = new Date(b.data.pubDate).getTime(); // Convert to timestamp
  return dateB - dateA; // Compare timestamps
});
---

<span class="sr-only"> Featured </span>
<div class="flex flex-col divide-y divide-base-500 bg-base-600 rounded-4xl">
  {
    allPosts
      .filter((post) => post.data.isFeatured)
      .slice(0, 4)
      .map((post) => <EntrySimple post={post} />)
  }
</div>
