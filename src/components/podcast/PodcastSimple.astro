---
import Text from "@/components/fundations/elements/Text.astro";
import Link from "@/components/fundations/elements/Link.astro";
// Icons
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
const { url, title, pubDate, tags } = {
  url: "/podcast/episodes/" + Astro.props.post.slug,
  title: Astro.props.post.data.title,
  tags: Astro.props.post.data.tags,
  pubDate: new Date(Astro.props.post.data.pubDate).toLocaleDateString("en-US", {
    year: "numeric",
    month: "long",
    day: "2-digit",
  }),
};
---

<article class="relative w-full p-8 overflow-hidden group">
  <div class="relative flex flex-col justify-between h-full">
    <div
      class="flex items-center pl-8 font-mono font-light gap-x-2 text-base-100"
    >
      <span>
        {
          tags.map((tag) => {
            const formattedTag = tag.replace(/-/g, " ");
            return (
              <Text
                tag="p"
                variant="textXS"
                class="capitalize"
                title={tag}
                aria-label={tag}
              >
                {formattedTag}
              </Text>
            );
          })
        }
      </span>
      <span aria-hidden="true">Â·</span>
      <Text tag="p" variant="textXS">
        <time datetime={pubDate}>{pubDate}</time>
      </Text>
    </div>
    <Text tag="h3" variant="textLG" class="mt-4 font-light text-white">
      {title}
    </Text>
    <Link
      href={url}
      title={title}
      size="sm"
      variant="muted"
      iconOnly
      class="mt-4"
    >
      <ArrowRight slot="icon" size="base" />
    </Link>
  </div>
</article>
