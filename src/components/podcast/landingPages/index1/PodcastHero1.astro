---
// Fundations
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Icons
import ArrowLeft from "@/components/fundations/icons/ArrowLeft.astro";
import ArrowRight from "@/components/fundations/icons/ArrowRight.astro";
// Components
import EpisodeSliderBig from "@/components/podcast/EpisodeSliderBig.astro";
// Get all posts
import { getCollection } from "astro:content";
const allPosts = await getCollection("podcast");
allPosts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime(); // Convert to timestamp
  const dateB = new Date(b.data.pubDate).getTime(); // Convert to timestamp
  return dateB - dateA; // Compare timestamps
});
---

<section class="overflow-x-hidden">
  <Wrapper variant="standard" class="pt-2">
    <div class="relative">
      <div id="keen-slider" class="relative w-full overflow-hidden keen-slider">
        {
          allPosts
            .filter((post) => post.data.isSeries)
            .map((post) => <EpisodeSliderBig post={post} />)
        }
      </div>
      <div class="flex items-center mt-2 gap-2">
        <Button
          aria-label="Previous slide"
          id="keen-slider-previous"
          size="24"
          variant="orange"
          class="w-full"
        >
          <ArrowLeft size="xl" />
        </Button>
        <Button
          aria-label="Next slide"
          id="keen-slider-next"
          size="24"
          variant="orange"
          class="w-full"
        >
          <ArrowRight size="xl" />
        </Button>
      </div>
    </div>
  </Wrapper>
</section>
